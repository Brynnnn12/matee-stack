<nav
  class="bg-gray-900 text-white z-50 relative border-b-4 border-yellow-400 font-mono"
>
  <!-- Pixel decoration -->
  <div
    class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-purple-500 via-pink-500 to-yellow-400"
  ></div>

  <div
    class="container mx-auto flex items-center justify-between px-4 py-3 relative"
  >
    <!-- Logo with game style -->
    <a href="/" class="text-2xl font-bold text-yellow-400 flex items-center">
      <span
        class="inline-block w-8 h-8 bg-red-500 mr-2 shadow-[4px_4px_0px_rgba(0,0,0,0.2)]"
      ></span>
      GAME<span class="text-white">WORLD</span>
    </a>

    <!-- Mobile menu button -->
    <button
      class="block md:hidden text-yellow-400 focus:outline-none uppercase font-bold px-4 py-2 shadow-lg"
      id="menu-toggle"
      type="button"
      aria-expanded="false"
      aria-controls="menu"
    >
      <svg
        class="h-8 w-8"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          stroke-linecap="square"
          stroke-linejoin="miter"
          stroke-width="3"
          d="M4 6h16M4 12h16M4 18h16"
        ></path>
      </svg>
    </button>

    <!-- Navigation menu -->
    <ul
      id="menu"
      class="hidden md:flex space-x-2 md:space-x-6 md:items-center md:static absolute left-0 w-full md:w-auto bg-gray-900 md:bg-transparent md:py-0 py-4 top-full border-b-4 border-yellow-400"
    >
      <li>
        <% if (currentPage === 'home') { %>
        <button
          id="home-btn"
          class="px-4 py-2 bg-yellow-400 text-gray-900 font-bold cursor-pointer border-4 border-gray-900 hover:scale-105 transition active:scale-95 uppercase shadow-lg"
        >
          HOME
        </button>
        <% } else { %>
        <a
          href="/"
          class="px-4 py-2 font-bold border-4 border-transparent hover:border-yellow-400 hover:text-yellow-400 transition hover:scale-105 uppercase shadow-lg"
          >HOME</a
        >
        <% } %>
      </li>
      <li>
        <% if (currentPage === 'about') { %>
        <button
          id="about-btn"
          class="px-4 py-2 bg-yellow-400 text-gray-900 font-bold cursor-pointer border-4 border-gray-900 hover:scale-105 transition active:scale-95 uppercase shadow-lg"
        >
          ABOUT
        </button>
        <% } else { %>
        <a
          href="/about"
          class="px-4 py-2 font-bold border-4 border-transparent hover:border-yellow-400 hover:text-yellow-400 transition hover:scale-105 uppercase shadow-lg"
          >ABOUT</a
        >
        <% } %>
      </li>
      <li>
        <% if (currentPage === 'character') { %>
        <button
          id="contact-btn"
          class="px-4 py-2 bg-yellow-400 text-gray-900 font-bold cursor-pointer border-4 border-gray-900 hover:scale-105 transition active:scale-95 uppercase shadow-lg"
        >
          CHARACTER
        </button>
        <% } else { %>
        <a
          href="/character"
          class="px-4 py-2 font-bold border-4 border-transparent hover:border-yellow-400 hover:text-yellow-400 transition hover:scale-105 uppercase shadow-lg"
          >CHARACTER</a
        >
        <% } %>
      </li>

      <% if (!user) { %>
      <li>
        <a
          href="/login"
          class="px-4 py-2 font-bold border-4 border-transparent hover:border-yellow-400 hover:text-yellow-400 transition hover:scale-105 uppercase shadow-lg"
          >LOGIN</a
        >
      </li>
      <li>
        <a
          href="/register"
          class="px-4 py-2 font-bold border-4 border-transparent hover:border-yellow-400 hover:text-yellow-400 transition hover:scale-105 uppercase shadow-lg"
          >REGISTER</a
        >
      </li>
      <% } else { %>
      <li>
        <form action="/logout" method="POST" class="inline">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
          <button
            type="submit"
            class="px-4 py-2 font-bold border-4 border-transparent hover:border-yellow-400 hover:text-yellow-400 transition hover:scale-105 uppercase shadow-lg"
          >
            LOGOUT
          </button>
      </li>
      <% } %>

      <!-- Avatar -->
      <li class="relative">
        <a
          href="/dashboard/profiles"
          class="flex items-center px-4 py-2 font-bold border-4 border-transparent hover:border-yellow-400 hover:text-yellow-400 transition hover:scale-105 uppercase shadow-lg"
        >
          <% if (user && user.avatar) { %>
          <img
            src="<%= user.avatar %>"
            alt="Avatar"
            class="w-8 h-8 rounded-full mr-2"
          />
          <% } else { %>
          <span class="w-8 h-8 bg-gray-600 rounded-full mr-2"></span>
          <% } %>
          Profile
        </a>
      </li>

    </ul>
  </div>
</nav>
