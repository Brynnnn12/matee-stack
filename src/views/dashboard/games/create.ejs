<div class="p-6 md:ml-54">
  <div class="max-w-2xl mx-auto">
    <div class="mb-6">
      <a
        href="/dashboard/games"
        class="text-yellow-400 hover:text-yellow-300 flex items-center"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5 mr-1"
          viewBox="0 0 20 20"
          fill="currentColor"
        >
          <path
            fill-rule="evenodd"
            d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z"
            clip-rule="evenodd"
          />
        </svg>
        Back to Games
      </a>
      <h1 class="text-2xl font-bold text-yellow-400 mt-2">Create New Game</h1>
    </div>

    <% if (message && message.length > 0) { %>
    <div class="bg-green-700 text-white px-4 py-2 rounded mb-4">
      <%= message %>
    </div>
    <% } %>

    <form
      action="/dashboard/games"
      method="POST"
      enctype="multipart/form-data"
      class="bg-gray-700 p-6 rounded-lg border border-gray-600"
    >
      <input type="hidden" name="_csrf" value="<%= csrfToken %>" />

      <div class="mb-4">
        <label for="name" class="block text-yellow-300 mb-2">Game Name</label>
        <input
          type="text"
          id="name"
          name="name"
          placeholder="Enter game name"
          class="w-full px-4 py-2 rounded border border-gray-600 bg-gray-800 text-white focus:outline-none focus:ring-2 focus:ring-yellow-500"
          required
          value="<%= typeof name !== 'undefined' ? name : '' %>"
        />
        <% if (errors) { %> <% errors.forEach((error) => { %> <% if (error.param === 'name') { %>
        <p class="text-red-400 text-sm mt-2"><%= error.msg %></p>
        <% } %> <% }) %> <% } %>
      </div>

      <div class="mb-4">
        <label for="genre_id" class="block text-yellow-300 mb-2">Genre</label>
        <select
          id="genre_id"
          name="genre_id"
          class="w-full px-4 py-2 rounded border border-gray-600 bg-gray-800 text-white focus:outline-none focus:ring-2 focus:ring-yellow-500"
          required
        >
          <option value="">Select genre</option>
          <% genres.forEach((genre) => { %>
            <option value="<%= genre.id %>" <%= typeof genre_id !== 'undefined' && genre_id == genre.id ? 'selected' : '' %>><%= genre.name %></option>
          <% }) %>
        </select>
        <% if (errors) { %> <% errors.forEach((error) => { %> <% if (error.param === 'genre_id') { %>
        <p class="text-red-400 text-sm mt-2"><%= error.msg %></p>
        <% } %> <% }) %> <% } %>
      </div>

      <div class="mb-4">
        <label for="description" class="block text-yellow-300 mb-2">Description</label>
        <textarea
          id="description"
          name="description"
          rows="3"
          placeholder="Enter game description"
          class="w-full px-4 py-2 rounded border border-gray-600 bg-gray-800 text-white focus:outline-none focus:ring-2 focus:ring-yellow-500"
        ><%= typeof description !== 'undefined' ? description : '' %></textarea>
        <% if (errors) { %> <% errors.forEach((error) => { %> <% if (error.param === 'description') { %>
        <p class="text-red-400 text-sm mt-2"><%= error.msg %></p>
        <% } %> <% }) %> <% } %>
      </div>

      <div class="mb-4">
        <label for="release_date" class="block text-yellow-300 mb-2">Release Date</label>
        <input
          type="date"
          id="release_date"
          name="release_date"
          class="w-full px-4 py-2 rounded border border-gray-600 bg-gray-800 text-white focus:outline-none focus:ring-2 focus:ring-yellow-500"
          value="<%= typeof release_date !== 'undefined' ? release_date : '' %>"
        />
        <% if (errors) { %> <% errors.forEach((error) => { %> <% if (error.param === 'release_date') { %>
        <p class="text-red-400 text-sm mt-2"><%= error.msg %></p>
        <% } %> <% }) %> <% } %>
      </div>

      <div class="mb-4">
        <label for="developer" class="block text-yellow-300 mb-2">Developer</label>
        <input
          type="text"
          id="developer"
          name="developer"
          placeholder="Enter developer name"
          class="w-full px-4 py-2 rounded border border-gray-600 bg-gray-800 text-white focus:outline-none focus:ring-2 focus:ring-yellow-500"
          value="<%= typeof developer !== 'undefined' ? developer : '' %>"
        />
        <% if (errors) { %> <% errors.forEach((error) => { %> <% if (error.param === 'developer') { %>
        <p class="text-red-400 text-sm mt-2"><%= error.msg %></p>
        <% } %> <% }) %> <% } %>
      </div>

      <div class="mb-4">
        <label for="image" class="block text-yellow-300 mb-2">Game Image</label>
        <input
          type="file"
          id="image"
          name="image"
          accept="image/*"
          class="w-full px-4 py-2 rounded border border-gray-600 bg-gray-800 text-white focus:outline-none focus:ring-2 focus:ring-yellow-500"
        />
        <% if (errors) { %> <% errors.forEach((error) => { %> <% if (error.param === 'image') { %>
        <p class="text-red-400 text-sm mt-2"><%= error.msg %></p>
        <% } %> <% }) %> <% } %>
      </div>

      <div class="flex justify-end space-x-3">
        <a
          href="/dashboard/games"
          class="bg-gray-600 hover:bg-gray-500 text-white font-bold px-4 py-2 rounded"
        >
          Cancel
        </a>
        <button
          type="submit"
          class="bg-yellow-400 hover:bg-yellow-500 text-gray-900 font-bold px-4 py-2 rounded"
        >
          Create Game
        </button>
      </div>
    </form>
  </div>
</div>
