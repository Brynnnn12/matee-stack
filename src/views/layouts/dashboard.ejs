<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title || "Dashboard" %></title>
    <link
      href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap"
      rel="stylesheet"
    />
    <link href="/src/output.css" rel="stylesheet" />
    <style>
      .pixelated {
        image-rendering: pixelated;
      }
      @media (max-width: 768px) {
        .sidebar-collapsed {
          transform: translateX(-100%);
        }
        .sidebar-expanded {
          transform: translateX(0);
        }
      }
    </style>
  </head>
  <body class="bg-gray-900 text-white font-mono overflow-hidden">
    <!-- Mobile Menu Button -->
    <button
      id="mobile-menu-button"
      class="md:hidden fixed top-4 left-4 z-50 bg-gray-800 p-2 border-2 border-yellow-400 text-yellow-400"
    >
      <svg
        class="w-6 h-6"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"
        ></path>
      </svg>
    </button>

    <div class="flex h-screen">
      <!-- Sidebar -->
      <%- include('../components/dashboard/sidebar.ejs') %>

      <!-- Main Content -->
      <div class="flex-1 flex flex-col overflow-hidden">
        <!-- Header -->
        <%- include('../components/dashboard/header.ejs') %>

        <!-- Main Content Area -->
        <main
          class="flex-1 overflow-y-auto p-2 sm:p-4 bg-gray-800 border-t-4 border-yellow-400"
        >
          <%- include('../components/partials/message.ejs') %> <%- body %>
        </main>
      </div>
    </div>
    <script src="/js/message.js"></script>
    <script src="/js/app.js"></script>
  </body>
</html>
