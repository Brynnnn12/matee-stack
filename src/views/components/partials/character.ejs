<section
  id="character"
  class="py-20 relative overflow-hidden"
  style="
    background-image: url('/assets/background.jpeg');
    background-size: cover;
    background-position: center;
  "
>
  <!-- Pixel decorations -->
  <div
    class="absolute top-20 left-10 w-6 h-6 bg-yellow-400 rounded-sm opacity-70"
  ></div>
  <div
    class="absolute bottom-1/4 right-20 w-10 h-10 bg-pink-500 opacity-30 rotate-45"
  ></div>

  <div class="container mx-auto px-4 relative z-20">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-4 game-title">
        <span class="text-yellow-400">KARAKTER</span> GAME
      </h2>
      <p class="text-gray-200 max-w-2xl mx-auto text-xl">
        Temukan dan telusuri berbagai karakter dari game 2D dan 3D, lengkap
        dengan nama, asal game, gambar, skill, dan deskripsi mereka!
      </p>
      <div class="w-32 h-2 bg-yellow-400 mx-auto mt-6"></div>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
      <% if (characters && characters.length > 0) { %> <%
      characters.slice(0,3).forEach(function(character) { %>
      <div
        class="bg-gray-900 p-8 rounded-xl border-2 border-yellow-400 flex flex-col items-center text-center hover:scale-[1.03] transition"
      >
        <img
          src="/uploads/characters/<%= character.image %>"
          alt="<%= character.name %>"
          class="w-24 h-24 rounded-lg mb-4"
          style="image-rendering: pixelated"
        />
        <h3 class="text-2xl font-bold text-yellow-400 mb-2 pixel-font">
          <%= character.name %>
        </h3>
        <p class="text-gray-300 mb-2 font-mono text-sm">
          Asal Game: <%= character.game && character.game.name ?
          character.game.name : 'Tidak diketahui' %>
        </p>
        <p class="text-gray-300 mb-2 font-mono text-sm">
          Skill: <%= character.skills && character.skills.length > 0 ?
          character.skills.map(function(s) { return s.name; }).join(', ') :
          'Tidak ada' %>
        </p>
        <p class="text-gray-200 mb-4 text-base">
          <%= character.description || 'Tidak ada deskripsi' %>
        </p>
      </div>
      <% }); %> <% } else { %>
      <p class="text-gray-300">Tidak ada karakter yang ditemukan.</p>
      <% } %>
    </div>
  </div>
</section>
