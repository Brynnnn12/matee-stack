<div
  class="min-h-screen flex items-center justify-center bg-gray-900 p-4 font-mono"
>
  <div
    class="w-full max-w-md bg-gray-800 border-4 border-yellow-400 rounded-lg p-6 shadow-lg"
  >
    <!-- Pixel art header -->
    <div class="flex justify-center mb-6">
      <div class="flex items-center space-x-2">
        <div
          class="w-8 h-8 bg-red-500 shadow-[4px_4px_0px_rgba(0,0,0,0.3)]"
        ></div>
        <div
          class="w-8 h-8 bg-blue-500 shadow-[4px_4px_0px_rgba(0,0,0,0.3)]"
        ></div>
        <div
          class="w-8 h-8 bg-green-500 shadow-[4px_4px_0px_rgba(0,0,0,0.3)]"
        ></div>
        <div
          class="w-8 h-8 bg-purple-500 shadow-[4px_4px_0px_rgba(0,0,0,0.3)]"
        ></div>
      </div>
    </div>

    <h2
      class="text-2xl font-bold text-yellow-400 text-center mb-6 uppercase tracking-wider"
    >
      New Player Registration
    </h2>

    <% if (typeof message !== 'undefined' && message.length && message[0]) { %>
    <div
      class="mb-4 border-2 border-blue-400 bg-blue-900 text-blue-100 px-4 py-3 flex items-center justify-between"
    >
      <span><%= message[0] %></span>
      <button
        type="button"
        onclick="this.parentElement.style.display='none'"
        class="text-blue-300 hover:text-white"
      >
        &times;
      </button>
    </div>
    <% } %> <% if (typeof errors !== 'undefined' && errors.length) { %>
    <div class="mb-4 border-2 border-red-400 bg-red-900 text-red-100 px-4 py-3">
      <ul class="list-disc pl-5">
        <% errors.forEach(function(error) { %>
        <li><%= error.msg %></li>
        <% }) %>
      </ul>
    </div>
    <% } %>

    <form
      action="/register"
      method="POST"
      enctype="multipart/form-data"
      autocomplete="off"
      class="space-y-4"
    >
      <input type="hidden" name="_csrf" value="<%= csrfToken %>" />

      <div>
        <label for="name" class="block text-sm font-bold text-white mb-2"
          >PLAYER NAME</label
        >
        <input
          id="name"
          name="name"
          type="text"
          required
          value="<%= typeof old !== 'undefined' && old.name ? old.name : '' %>"
          class="w-full px-4 py-3 bg-gray-700 border-2 border-gray-600 text-white focus:border-yellow-400 focus:outline-none"
          placeholder="Your character name"
        />
      </div>

      <div>
        <label for="email" class="block text-sm font-bold text-white mb-2"
          >EMAIL ADDRESS</label
        >
        <input
          id="email"
          name="email"
          type="email"
          required
          value="<%= typeof old !== 'undefined' && old.email ? old.email : '' %>"
          class="w-full px-4 py-3 bg-gray-700 border-2 border-gray-600 text-white focus:border-yellow-400 focus:outline-none"
          placeholder="player@game.world"
          autocomplete="email"
        />
      </div>

      <div>
        <label for="password" class="block text-sm font-bold text-white mb-2"
          >SECRET CODE</label
        >
        <input
          id="password"
          name="password"
          type="password"
          required
          class="w-full px-4 py-3 bg-gray-700 border-2 border-gray-600 text-white focus:border-yellow-400 focus:outline-none"
          placeholder="••••••••"
          autocomplete="new-password"
        />
      </div>

      <div>
        <label
          for="passwordConfirm"
          class="block text-sm font-bold text-white mb-2"
          >CONFIRM CODE</label
        >
        <input
          id="passwordConfirm"
          name="passwordConfirm"
          type="password"
          required
          class="w-full px-4 py-3 bg-gray-700 border-2 border-gray-600 text-white focus:border-yellow-400 focus:outline-none"
          placeholder="••••••••"
          autocomplete="new-password"
        />
      </div>

      <div>
        <label for="avatar" class="block text-sm font-bold text-white mb-2">
          CHARACTER IMAGE (OPTIONAL)
        </label>
        <div class="flex items-center">
          <div
            class="w-12 h-12 bg-gray-700 border-2 border-gray-600 flex items-center justify-center"
          >
            <svg
              class="h-8 w-8 text-gray-500"
              fill="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                d="M24 20.993V24H0v-2.996A14.977 14.977 0 0112.004 15c4.904 0 9.26 2.354 11.996 5.993zM16.002 8.999a4 4 0 11-8 0 4 4 0 018 0z"
              />
            </svg>
          </div>
          <label class="ml-4">
            <span
              class="px-4 py-2 bg-gray-700 border-2 border-gray-600 text-white hover:border-yellow-400 cursor-pointer inline-block"
            >
              Choose File
              <input
                id="avatar"
                name="avatar"
                type="file"
                class="hidden"
                accept="image/*"
              />
            </span>
          </label>
        </div>
        <p class="mt-1 text-xs text-gray-400">PNG or JPG, max 2MB</p>
      </div>

      <div class="pt-4">
        <button
          type="submit"
          class="w-full py-3 bg-yellow-500 text-gray-900 font-bold border-4 border-gray-900 hover:bg-yellow-400 hover:scale-105 transition active:scale-95 uppercase shadow-lg"
        >
          Create Player
        </button>
      </div>

      <div class="text-center text-gray-400 text-sm">
        Already registered?
        <a href="/login" class="text-yellow-400 hover:text-yellow-300 underline"
          >Login here</a
        >
      </div>
    </form>

    <!-- Pixel art footer -->
    <div class="mt-6 flex justify-center">
      <div class="flex space-x-1">
        <div class="w-3 h-3 bg-purple-500"></div>
        <div class="w-3 h-3 bg-pink-500"></div>
        <div class="w-3 h-3 bg-yellow-500"></div>
        <div class="w-3 h-3 bg-blue-500"></div>
      </div>
    </div>
  </div>
</div>
