<!-- Alpine.js for toggle menu -->

<nav class="bg-gray-900 text-white" x-data="{ open: false }">
  <div class="container mx-auto flex items-center justify-between px-4 py-3">
    <a href="/" class="text-lg font-bold">My Website</a>
    <button
      class="block md:hidden text-gray-400 focus:outline-none"
      @click="open = !open"
    >
      <svg
        class="h-6 w-6"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"
        ></path>
      </svg>
    </button>
    <ul
      :class="{'hidden': !open, 'flex': open}"
      class="md:flex space-x-4 md:space-x-8 md:items-center md:static absolute left-0 w-full md:w-auto bg-gray-900 md:bg-transparent md:py-0 py-4 top-full"
    >
      <li>
        <% if (currentPage === 'home') { %>
        <button
          class="px-3 py-2 rounded-md bg-gray-800 text-yellow-400 cursor-pointer w-full text-left"
          onclick="document.getElementById('home-section').scrollIntoView({behavior: 'smooth'})"
        >
          Home
        </button>
        <% } else { %>
        <a
          href="/"
          class="px-3 py-2 rounded-md transition-colors hover:bg-gray-800 hover:text-yellow-400"
          >Home</a
        >
        <% } %>
      </li>
      <li>
        <% if (currentPage === 'about') { %>
        <button
          class="px-3 py-2 rounded-md bg-gray-800 text-yellow-400 cursor-pointer w-full text-left"
          onclick="document.getElementById('about-section').scrollIntoView({behavior: 'smooth'})"
        >
          About
        </button>
        <% } else { %>
        <a
          href="/about"
          class="px-3 py-2 rounded-md transition-colors hover:bg-gray-800 hover:text-yellow-400"
          >About</a
        >
        <% } %>
      </li>
      <li>
        <% if (currentPage === 'contact') { %>
        <button
          class="px-3 py-2 rounded-md bg-gray-800 text-yellow-400 cursor-pointer w-full text-left"
          onclick="document.getElementById('contact-section').scrollIntoView({behavior: 'smooth'})"
        >
          Contact
        </button>
        <% } else { %>
        <a
          href="/contact"
          class="px-3 py-2 rounded-md transition-colors hover:bg-gray-800 hover:text-yellow-400"
          >Contact</a
        >
        <% } %>
      </li>
    </ul>
  </div>
</nav>
