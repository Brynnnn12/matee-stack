<section
  class="relative bg-gradient-to-br from-purple-900 via-indigo-800 to-blue-700 text-white py-20 md:py-32 overflow-hidden"
>
  <!-- Pixel art decorative elements -->
  <div
    class="absolute top-10 left-10 w-16 h-16 border-4 border-yellow-400 rotate-45 opacity-30"
  ></div>
  <div
    class="absolute bottom-1/4 right-20 w-24 h-24 border-4 border-pink-500 rounded-full opacity-20"
  ></div>
  <div class="absolute top-1/3 right-1/4 w-8 h-8 bg-green-400 opacity-50"></div>

  <div
    class="container mx-auto px-4 flex flex-col md:flex-row items-center relative z-10"
  >
    <!-- Hero Content -->
    <div class="md:w-1/2 mb-10 md:mb-0">
      <div
        class="inline-block bg-yellow-400 text-purple-900 px-3 py-1 rounded-md mb-4 text-sm font-bold tracking-wide"
      >
        TEMUKAN KARAKTER FAVORITMU!
      </div>
      <h1
        class="text-4xl md:text-6xl font-bold mb-6"
        style="text-shadow: 4px 4px 0px rgba(0, 0, 0, 0.2); letter-spacing: 1px"
      >
        Katalog <span class="text-yellow-300">Karakter Game</span> 2D & 3D
      </h1>
      <p class="text-xl mb-8 opacity-90 max-w-lg font-mono">
        Jelajahi koleksi karakter dari berbagai game 2D maupun 3D! Cari
        informasi lengkap seperti nama, asal game, gambar, skill, dan deskripsi
        detail tiap karakter.
      </p>
      <div class="flex space-x-4">
        <a
          href="#catalog"
          class="bg-yellow-400 text-purple-900 px-8 py-4 rounded-lg font-bold hover:bg-yellow-300 transition transform hover:scale-105 shadow-lg"
        >
          LIHAT KATALOG
        </a>
        <a
          href="#about"
          class="border-4 border-white px-8 py-3 rounded-lg font-bold hover:bg-white hover:text-purple-900 transition transform hover:scale-105"
        >
          TENTANG WEBSITE
        </a>
      </div>

      <!-- Pixel art characters -->
      <div class="flex mt-12 space-x-6">
        <div
          class="w-12 h-12 bg-red-500"
          style="
            image-rendering: pixelated;
            box-shadow: 4px 4px 0px rgba(0, 0, 0, 0.2);
            animation: float 3s ease-in-out infinite;
          "
        ></div>
        <div
          class="w-12 h-12 bg-blue-400"
          style="
            image-rendering: pixelated;
            box-shadow: 4px 4px 0px rgba(0, 0, 0, 0.2);
            animation: float 3s ease-in-out infinite;
            animation-delay: 0.5s;
          "
        ></div>
        <div
          class="w-12 h-12 bg-green-500"
          style="
            image-rendering: pixelated;
            box-shadow: 4px 4px 0px rgba(0, 0, 0, 0.2);
            animation: float 3s ease-in-out infinite;
            animation-delay: 1s;
          "
        ></div>
      </div>
    </div>

    <!-- Hero Image -->
    <div class="md:w-1/2 flex justify-center relative">
      <div class="relative">
        <img
          src="/assets/hero.png"
          alt="Karakter Game"
          class="w-full max-w-md transition duration-500"
          style="
            image-rendering: pixelated;
            border-radius: 16px;
            border: 4px solid white;
            box-shadow: 8px 8px 0px rgba(0, 0, 0, 0.2);
          "
        />
        <div
          class="absolute -bottom-6 -left-6 w-24 h-24 bg-pink-500 rounded-full opacity-20 z-0"
        ></div>
      </div>
    </div>
  </div>
</section>
