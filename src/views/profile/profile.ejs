      <!-- Contact Form -->
      <div class="lg:w-2/3">
        <form class="bg-gray-900 p-8 rounded-xl border-2 border-yellow-400">
          <div class="grid md:grid-cols-2 gap-6 mb-6">
            <div>
              <label for="name" class="block text-yellow-400 font-bold mb-2"
                >ADVENTURER NAME</label
              >
              <input
                type="text"
                id="name"
                class="w-full px-4 py-3 rounded-lg bg-gray-800 border-2 border-gray-700 text-white focus:outline-none focus:border-yellow-400 focus:ring-0"
                placeholder="Your character name"
              />
            </div>
            <div>
              <label for="email" class="block text-yellow-400 font-bold mb-2"
                >MAGIC SCROLL ADDRESS</label
              >
              <input
                type="email"
                id="email"
                class="w-full px-4 py-3 rounded-lg bg-gray-800 border-2 border-gray-700 text-white focus:outline-none focus:border-yellow-400 focus:ring-0"
                placeholder="your@email.com"
              />
            </div>
          </div>

          <div class="mb-6">
            <label for="subject" class="block text-yellow-400 font-bold mb-2"
              >QUEST TYPE</label
            >
            <input
              type="text"
              id="subject"
              class="w-full px-4 py-3 rounded-lg bg-gray-800 border-2 border-gray-700 text-white focus:outline-none focus:border-yellow-400 focus:ring-0"
              placeholder="What's your quest about?"
            />
          </div>

          <div class="mb-6">
            <label for="message" class="block text-yellow-400 font-bold mb-2"
              >QUEST DETAILS</label
            >
            <textarea
              id="message"
              rows="5"
              class="w-full px-4 py-3 rounded-lg bg-gray-800 border-2 border-gray-700 text-white focus:outline-none focus:border-yellow-400 focus:ring-0"
              placeholder="Tell us about your adventure..."
            ></textarea>
          </div>

          <button
            type="submit"
            class="w-full bg-yellow-400 text-purple-900 px-6 py-4 rounded-lg font-bold hover:bg-yellow-300 transition transform hover:scale-105 pixel-button text-xl"
          >
            SEND MESSAGE RAVEN
          </button>
        </form>
      </div>
    </div>
  </div>
</section>
