<header
  class="bg-gray-800 border-b-4 border-yellow-400 p-2 sm:p-4 flex flex-col sm:flex-row items-center justify-between gap-2"
>
  <!-- Mobile Title -->
  <h1 class="sm:hidden text-xl font-bold text-yellow-400">GAMEWORLD</h1>

  <!-- Search Bar -->
  <div class="relative w-full sm:w-64 order-2 sm:order-1">
    <input
      type="text"
      placeholder="Search game..."
      class="w-full px-3 py-1 sm:px-4 sm:py-2 bg-gray-700 border-2 border-gray-600 focus:border-yellow-400 focus:outline-none text-sm sm:text-base"
    />
    <button
      class="absolute right-2 top-1/2 transform -translate-y-1/2 text-gray-400 hover:text-yellow-400"
    >
      <svg
        class="w-4 h-4 sm:w-5 sm:h-5"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
        ></path>
      </svg>
    </button>
  </div>

  <!-- User Menu -->
  <div
    class="flex items-center space-x-2 sm:space-x-4 order-1 sm:order-2 w-full sm:w-auto justify-between sm:justify-normal"
  >
    <div class="relative">
      <button class="text-gray-400 hover:text-yellow-400">
        <svg
          class="w-5 h-5 sm:w-6 sm:h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"
          ></path>
        </svg>
        <span
          class="absolute top-0 right-0 w-2 h-2 bg-red-500 rounded-full"
        ></span>
      </button>
    </div>

    <div class="flex items-center space-x-2">
      <div
        class="w-6 h-6 sm:w-8 sm:h-8 bg-blue-500 rounded-sm shadow-[2px_2px_0px_rgba(0,0,0,0.3)]"
      ></div>
      <%if (user) { %>
      <span class="font-bold text-sm sm:text-base"><%= user.name %></span
      <% } else { %>
      <span class="font-bold text-sm sm:text-base">Guest</span>
      <% } %>
      <button class="text-gray-400 hover:text-yellow-400 hidden sm:block">
        <svg
          class="w-4 h-4 sm:w-5 sm:h-5"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M19 9l-7 7-7-7"
          ></path>
        </svg>
      </button>
    </div>
  </div>
</header>
