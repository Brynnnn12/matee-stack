<section
  id="profile"
  class="py-20 bg-gradient-to-b from-indigo-900 to-purple-800 text-white relative overflow-hidden"
>
  <!-- Pixel decorations -->
  <div
    class="absolute top-20 left-10 w-6 h-6 bg-yellow-400 rounded-sm opacity-70"
  ></div>
  <div
    class="absolute bottom-1/4 right-20 w-10 h-10 bg-pink-500 opacity-30 rotate-45"
  ></div>

  <div class="container mx-auto px-4 relative z-10">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-4 game-title">
        <span class="text-yellow-400">PLAYER</span> PROFILE
      </h2>
      <p class="text-gray-200 max-w-2xl mx-auto text-xl">
        View your adventurer profile and guild credentials. Ready for your next
        quest?
      </p>
      <div class="w-32 h-2 bg-yellow-400 mx-auto mt-6"></div>
    </div>

    <div class="flex flex-col lg:flex-row gap-8">
      <!-- Profile Info -->
      <div
        class="lg:w-1/3 bg-gray-900 p-8 rounded-xl border-2 border-yellow-400 transform hover:scale-[1.02] transition flex flex-col items-center"
      >
        <h3 class="text-2xl font-bold text-yellow-400 mb-6 pixel-font">
          AVATAR
        </h3>
        <img
          src="<%= user.avatar || '/default-avatar.png' %>"
          alt="Avatar"
          class="w-32 h-32 rounded-full border-4 border-yellow-400 shadow-lg mb-6"
        />
        <div class="space-y-6 w-full">
          <div class="flex items-center">
            <span class="font-bold text-lg w-32">Name:</span>
            <span class="text-gray-300 ml-2"><%= user.name %></span>
          </div>

          <div class="flex items-center">
            <span class="font-bold text-lg w-32">Role:</span>
            <span class="text-gray-300 ml-2"
              ><%= user.role ? user.role.name : '-' %></span
            >
          </div>
          <div class="flex items-center">
            <span class="font-bold text-lg w-32">Joined:</span>
            <span class="text-gray-300 ml-2"
              ><%= user.createdAt.toLocaleDateString() %></span
            >
          </div>
        </div>
      </div>

      <!-- User Detail Card -->
      <div class="lg:w-2/3">
        <div class="bg-gray-900 p-8 rounded-xl border-2 border-yellow-400">
          <div class="grid md:grid-cols-2 gap-6 mb-6">
            <div>
              <label class="block text-yellow-400 font-bold mb-2"
                >ADVENTURER EMAIL</label
              >
              <div
                class="w-full px-4 py-3 rounded-lg bg-gray-800 border-2 border-gray-700 text-white"
              >
                <%= user.email %>
              </div>
            </div>
            <div>
              <label class="block text-yellow-400 font-bold mb-2"
                >PASSWORD</label
              >
              <div
                class="w-full px-4 py-3 rounded-lg bg-gray-800 border-2 border-gray-700 text-white flex items-center"
              >
                <span class="tracking-widest select-none">•••••••••••••</span>
                <a
                  href="/profile/change-password"
                  class="ml-4 text-yellow-400 font-bold underline hover:text-yellow-300 text-sm"
                  >Change?</a
                >
              </div>
            </div>
          </div>

          <div class="mb-6">
            <label class="block text-yellow-400 font-bold mb-2"
              >GUILD STATUS</label
            >
            <div
              class="w-full px-4 py-3 rounded-lg bg-gray-800 border-2 border-gray-700 text-white"
            >
              <%= user.status || "Active" %>
            </div>
          </div>

          <div class="mb-6">
            <label class="block text-yellow-400 font-bold mb-2">BIO</label>
            <div
              class="w-full px-4 py-3 rounded-lg bg-gray-800 border-2 border-gray-700 text-white min-h-[60px]"
            >
              <%= user.bio || "No bio available." %>
            </div>
          </div>

          <a
            href="/profile/edit"
            class="w-full bg-yellow-400 text-purple-900 px-6 py-4 rounded-lg font-bold hover:bg-yellow-300 transition transform hover:scale-105 pixel-button text-xl block text-center mt-6"
          >
            EDIT PROFILE
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
